{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "webpack: watch",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
  "problemMatcher": "$tsc-watch"
    },
    {
      "label": "terminate webpack watch",
      "type": "shell",
      "command": "taskkill /F /IM node.exe",
      "windows": {
        "command": "Get-Process node -ErrorAction SilentlyContinue | Stop-Process -Force"
      },
      "problemMatcher": []
    }
  ]
}
